<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical"
    tools:context=".user.announcement.details.AnnouncementDetailsFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:text="Find More about the team"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/color_ascent"
        android:textSize="24sp" />

    <!--    Hack Name-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            android:text="Hack Name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_ann_details_hack_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hack Name"
            android:textSize="20sp" />

    </LinearLayout>

    <!--    Hack Domain-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            android:text="Hack domain"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_ann_details_hack_domain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hack domain"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hack Time"
        android:textAlignment="center"
        android:textColor="@color/color_ascent"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="3">


        <TextView
            android:id="@+id/tv_ann_details_hack_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hack start"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TO"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_ann_details_hack_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hack end"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18sp"
            android:text="User Name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_ann_details_hack_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18sp"
            android:text="User Email"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_ann_details_hack_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Email"
            android:textSize="20sp" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Hack message"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_ann_details_hack_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Hack message"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Hack requirements"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_ann_details_hack_requirements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Hack requirements"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_view_user_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40sp"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/rounded_button"
        android:text="View Profile" />

    <Button
        android:id="@+id/btn_mail_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="Mail To" />


</LinearLayout>
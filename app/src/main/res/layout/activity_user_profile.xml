<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.user.profile.UserProfileActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:hint="Name"
            android:inputType="none" />


        <TextView
            android:id="@+id/tv_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:hint="Email"
            android:inputType="none" />

        <EditText
            android:id="@+id/et_user_phone_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Phone No"
            android:inputType="none" />

        <EditText
            android:id="@+id/et_user_clg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="College Name"
            android:inputType="none" />

        <EditText
            android:id="@+id/et_user_degree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Enrolled Degree"
            android:inputType="none" />

        <EditText
            android:id="@+id/et_user_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Location"
            android:inputType="none" />

        <EditText
            android:id="@+id/et_user_linkedIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="LinkedIn Profile Link"
            android:inputType="none" />

        <EditText
            android:id="@+id/et_user_skills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Skills"
            android:inputType="none" />

        <EditText
            android:id="@+id/et_user_codechef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Code Chef Profile Link"
            android:inputType="none" />

        <EditText
            android:id="@+id/et_user_hackerrank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Hacker Rank Profile Link"
            android:inputType="none" />

        <Button
            android:id="@+id/bt_user_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDBE9"
    tools:context=".AddEventActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:outlineProvider="background"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/textView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:text="EVENT FORM"
                android:textColor="@color/color_secondary"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/ethackName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_border"
                android:hint="Hackathon Title"
                android:padding="5dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:text="SELECT HACKATHON DOMAIN"
                android:textColor="@color/color_secondary" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/rbsoftware"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="onRadioButtonClicked"
                    android:text="Software" />

                <RadioButton
                    android:id="@+id/rbhardware"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="onRadioButtonClicked"
                    android:text="Hardware" />

                <RadioButton
                    android:id="@+id/rbBoth"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="onRadioButtonClicked"
                    android:text="Both" />
            </RadioGroup>

            <EditText
                android:id="@+id/ethackDescrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_border"
                android:gravity="top|left"
                android:hint="Description Of Problem Statement"
                android:lines="5"
                android:padding="5dp" />

            <EditText
                android:id="@+id/etEligibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_border"
                android:gravity="top|left"
                android:hint="Eligibility"
                android:lines="2"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Registration Opens"
                    android:textColor="@color/color_secondary" />

                <ImageButton
                    android:id="@+id/btnRegStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_date" />

                <EditText
                    android:id="@+id/etRegOpen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:hint="DD/MM/YYYY"
                    android:inputType="date"
                    android:padding="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Registration Close"
                    android:textColor="@color/color_secondary" />

                <ImageButton
                    android:id="@+id/btnRegEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_date" />

                <EditText
                    android:id="@+id/etRegClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="DD/MM/YYYY"
                    android:inputType="date"
                    android:padding="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:text="Hackathon Start"
                    android:textColor="@color/color_secondary" />

                <ImageButton
                    android:id="@+id/btnHckStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_date" />

                <EditText
                    android:id="@+id/ethckstr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:hint="DD/MM/YYYY"
                    android:inputType="date"
                    android:padding="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:text="Hackathon End"
                    android:textColor="@color/color_secondary" />

                <ImageButton
                    android:id="@+id/btnHckEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_date" />

                <EditText
                    android:id="@+id/ethckEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:hint="DD/MM/YYYY"
                    android:inputType="date"
                    android:padding="5dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/etPrizes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_border"
                android:gravity="top|left"
                android:hint="Prizes"
                android:lines="3"
                android:padding="5dp" />

            <EditText
                android:id="@+id/etEventRegLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_border"
                android:gravity="top|left"
                android:hint="Add Registration Link"
                android:lines="2"
                android:padding="5dp" />

            <Button
                android:id="@+id/btSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#FF9190"
                android:padding="5dp"
                android:text="SUBMIT" />
        </LinearLayout>

    </ScrollView>
</RelativeLayout>